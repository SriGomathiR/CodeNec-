    <script>
        let currentAudience = null;
        let expandedCards = new Set();

        function toggleTheme() {
            const body = document.body;
            const darkIcon = document.getElementById('darkIcon');
            const lightIcon = document.getElementById('lightIcon');
            
            if (body.classList.contains('dark-theme')) {
                body.classList.remove('dark-theme');
                body.classList.add('light-theme');
                darkIcon.classList.add('active');
                lightIcon.classList.remove('active');
            } else {
                body.classList.remove('light-theme');
                body.classList.add('dark-theme');
                darkIcon.classList.remove('active');
                lightIcon.classList.add('active');
            }
        }

        function selectAudience(audience) {
            // Remove active class from all buttons
            document.querySelectorAll('.audience-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            
            // Add active class to selected button
            event.target.classList.add('active');
            currentAudience = audience;
            
            // Show appropriate content
            if (audience === 'manager') {
                document.getElementById('defaultContent').style.display = 'none';
                document.getElementById('managerContent').classList.add('active');
                updateSearchPlaceholder('Search investment opportunities, funding analysis, ROI projections...');
            } else {
                document.getElementById('defaultContent').style.display = 'block';
                document.getElementById('managerContent').classList.remove('active');
                if (audience === 'scientist') {
                    updateSearchPlaceholder('Search research gaps, hypotheses, experimental data...');
                } else if (audience === 'architect') {
                    updateSearchPlaceholder('Search mission requirements, safety protocols, system designs...');
                } else {
                    updateSearchPlaceholder('Search NASA bioscience publications...');
                }
            }
        }

        function updateSearchPlaceholder(placeholder) {
            document.querySelector('.search-input').placeholder = placeholder;
        }

        function performSearch(event) {
            const query = event.target.value.toLowerCase();
            if (event.key === 'Enter' && query.length > 0) {
                // Simulate search functionality
                console.log(`Searching for: ${query} as ${currentAudience || 'general user'}`);
                
                // Add visual feedback
                event.target.style.borderColor = '#10b981';
                setTimeout(() => {
                    event.target.style.borderColor = '#60a5fa';
                }, 1000);
            }
        }

        function toggleCard(card) {
            const cardId = Array.from(card.parentNode.children).indexOf(card);
            
            if (expandedCards.has(cardId)) {
                card.classList.remove('card-expanded');
                expandedCards.delete(cardId);
                
                // Remove expanded content if it exists
                const expandedContent = card.querySelector('.expanded-content');
                if (expandedContent) {
                    expandedContent.remove();
                }
            } else {
                card.classList.add('card-expanded');
                expandedCards.add(cardId);
                
                // Add expanded content
                const expandedContent = document.createElement('div');
                expandedContent.className = 'expanded-content';
                expandedContent.innerHTML = `
                    <div class="section-tabs">
                        <div class="section-tab active" onclick="switchTab(this, 'overview')">Overview</div>
                        <div class="section-tab" onclick="switchTab(this, 'findings')">Key Findings</div>
                        <div class="section-tab" onclick="switchTab(this, 'implications')">Implications</div>
                    </div>
                    <div class="tab-content">
                        <div class="visual-summary">
                            <div class="visual-icons">
                                <div class="visual-icon">
                                    <div>üß¨</div>
                                    <div>Molecular</div>
                                </div>
                                <div class="visual-icon">
                                    <div>üî¨</div>
                                    <div>Cellular</div>
                                </div>
                                <div class="visual-icon">
                                    <div>ü´Ä</div>
                                    <div>Systemic</div>
                                </div>
                                <div class="visual-icon">
                                    <div>üöÄ</div>
                                    <div>Mission</div>
                                </div>
                            </div>
                        </div>
                        ${currentAudience === 'scientist' ? `
                            <div class="hypothesis-highlight">
                                <h4>üî¨ Research Hypothesis</h4>
                                <p>Microgravity-induced changes in plant cellular metabolism may be reversible through targeted nutrient supplementation and controlled environmental conditions.</p>
                            </div>
                        ` : currentAudience === 'manager' ? `
                            <div class="investment-opportunity">
                                <h4>üí∞ Investment Opportunity</h4>
                                <p>Plant growth systems represent a $2.3B market opportunity with applications in vertical farming, space missions, and sustainable agriculture. ROI projected at 340% over 5 years.</p>
                            </div>
                        ` : `
                            <div class="mission-insight">
                                <h4>üöÄ Mission Insight</h4>
                                <p>Plant growth systems are critical for missions exceeding 18 months. Current technology readiness level: 6/9. Requires 24 months additional development for Mars deployment.</p>
                            </div>
                        `}
                    </div>
                `;
                card.appendChild(expandedContent);
            }
        }

        function switchTab(tab, tabType) {
            // Remove active class from all tabs in this card
            const tabs = tab.parentNode.querySelectorAll('.section-tab');
            tabs.forEach(t => t.classList.remove('active'));
            
            // Add active class to clicked tab
            tab.classList.add('active');
            
            // Update content based on tab type
            const content = tab.parentNode.nextElementSibling;
            // This would typically update the content based on the tab type
            console.log(`Switched to ${tabType} tab`);
        }

        // Manager-specific functions
        function expandInvestment(card) {
            // Add visual feedback for investment card interaction
            card.style.transform = 'translateY(-4px)';
            setTimeout(() => {
                card.style.transform = 'translateY(-2px)';
            }, 200);
        }

        function approveInvestment(investmentType) {
            event.stopPropagation();
            alert(`‚úÖ Investment approved for ${investmentType}! Funding request has been submitted for review.`);
            
            // Add visual feedback
            const button = event.target;
            const originalText = button.textContent;
            button.textContent = '‚úÖ Approved';
            button.style.background = '#10b981';
            
            setTimeout(() => {
                button.textContent = originalText;
                button.style.background = '#10b981';
            }, 2000);
        }

        function requestMoreInfo(investmentType) {
            event.stopPropagation();
            alert(`üìã Detailed analysis requested for ${investmentType}. Report will be generated within 24 hours.`);
            
            // Add visual feedback
            const button = event.target;
            const originalText = button.textContent;
            button.textContent = 'üìã Requested';
            
            setTimeout(() => {
                button.textContent = originalText;
            }, 2000);
        }

        function generateReport() {
            alert('üìä Comprehensive investment report is being generated. You will receive it via email within 30 minutes.');
        }

        function scheduleReview() {
            alert('üìÖ Review meeting has been scheduled for next Tuesday at 2:00 PM EST. Calendar invite sent.');
        }

        function exportData() {
            alert('üìÅ Investment data exported successfully. Download will begin shortly.');
        }

        // Initialize the dashboard
        document.addEventListener('DOMContentLoaded', function() {
            console.log('NASA Space Biology Research Dashboard initialized');
            console.log('608 publications loaded and analyzed');
        });
    </script>
